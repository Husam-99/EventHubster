<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Event</h1>
        <div class="col-6 offset-3">
            <form action="/events/<%=event._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="event[title]" required
                        value="<%= event.title %>">
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="event[location]" required
                        value="<%= event.location %>">
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Event Price</label>

                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="event[price]" required value="<%= event.price %>">
                        <div class="valid-feedback">
                            Great!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="event[description]" required>
                    <%= event.description %></textarea>
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Add image(s)...</label>
                    <div class="input-group custom-file mb-3">
                        <input type="file" class="form-control" id="image" name="image" multiple>
                    </div>
                </div>
                <h6>Delete Images</h6>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% event.images.forEach((img, i)=> { %>
                        <div class="col">
                            <div class="card">
                                <img class="card-img" src="<%= img.thumbnail %>" alt="">
                                <div class="card-img-overlay text-end pt-1 pe-2">
                                    <label class="visually-hidden" for="image-<%= i %>">Delete Image</label>
                                    <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                        value="<%= img.filename %>" id="image-<%= i %>">
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>


                <div class="mb-3">
                    <button class="btn btn-info">Update Event</button>

                </div>
            </form>
            <a href="/events/<%= event._id %>">Back To Event</a>

        </div>
    </div>