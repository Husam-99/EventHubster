<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Event</h1>
        <div class="col-6 offset-3">
            <form action="/events" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="event[title]" required>
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="event[location]" required>
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>

                <!--<input type="file" name="image" id="" multiple>-->
                <!--
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="event[image]" required>
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>
                -->
                <div class="mb-3">
                    <label class="form-label" for="price">Event Price</label>

                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="event[price]" required>
                        <div class="valid-feedback">
                            Great!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="event[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Great!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Upload image(s)...</label>
                    <div class="input-group custom-file mb-3">
                        <input type="file" class="form-control" id="image" name="image" multiple>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Event</button>

                </div>
            </form>
            <a href="/events">All Events</a>

        </div>
    </div>